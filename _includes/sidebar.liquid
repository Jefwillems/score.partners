<style>
  section#sidebar {
    max-width: 360px;
    padding: 16px;
    padding-bottom: 64px;
    border-right: 1px solid #fc0;
  }
  section#sidebar h3 {
    font-weight: normal;
  }
  section#sidebar .active {
    font-weight: bold;
  }
</style>


<section id="sidebar">
  <h3 class="{% if page.path == 'index.md' %}active{% endif %}"><a href="/">Home</a>

  <h3 class="{% if page.path == 'status/index.md' %}active{% endif %}"><a href="/status/">Partner statuses</a></h3>
  <ul id="status-items">
  {% for item in site.pages %}
    {% if item.inStatus == true and item.name != "README.md" %}
      <li class="{% if item.name == page.name %}active{% endif %}"><a href="{{ item.url }}">{{ item.title }}</a></li>
    {% endif %}
  {% endfor %}
  </ul>

<h3 class="{% if page.path == 'guides/README.md' %}active{% endif %}"><a href="/guides/">Guides</a></h3>
  <ul id="guides-items">
